<Page x:Class="Arasaka_Employers.Pages.Employees"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Arasaka_Employers.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1600"
      Title="Employees">

    <Grid Background="Wheat">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" HorizontalAlignment="Left" Margin="5" Content="Выйти" Width="100"></Button>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button Grid.Row="1" HorizontalAlignment="Left" Margin="5" Content="Удалить" Width="100"></Button>
            <Button Grid.Row="1" HorizontalAlignment="Left" Margin="5" Content="Редактировать" Width="100"></Button>
            <Button Grid.Row="1" HorizontalAlignment="Left" Margin="5" Content="Добвать" Width="100"></Button>
        </StackPanel>
    </Grid>
</Page>
